        }
      ]
    },
    {
      "name": "Payment",
      "item": [
        {
          "name": "Create Cash Order",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": { "mode": "raw", "raw": "{\n  \"cash\": \"cash\",\n  \"email\": \"{{email}}\",\n  \"country\": \"EG\",\n  \"firstName\": \"Jane\",\n  \"lastName\": \"Doe\",\n  \"address\": \"123 Street\",\n  \"apartment\": \"\",\n  \"postalZip\": \"12345\",\n  \"bostaCityName\": \"Cairo\",\n  \"bostaZoneName\": \"Nasr City\",\n  \"phone\": \"+201000000000\",\n  \"cart\": [{\n    \"productId\": \"{{productId}}\",\n    \"productName\": \"Product Name\",\n    \"price\": 100,\n    \"quantity\": 1,\n    \"imageUrl\": \"https://example.com/img.jpg\",\n    \"variant\": { \"name\": \"Default\", \"attributeName\": \"Size\", \"attributes\": [{ \"name\": \"M\", \"stock\": 10 }], \"images\": [{ \"url\": \"https://example.com/img.jpg\", \"type\": \"image\" }] },\n    \"attributes\": { \"name\": \"M\", \"stock\": 10 }\n  }],\n  \"subTotal\": 100,\n  \"shipping\": 0,\n  \"total\": 100,\n  \"currency\": \"EGP\"\n}" },
            "url": { "raw": "{{baseUrl}}/api/payment", "host": ["{{baseUrl}}"], "path": ["api", "payment"] }
          }
        },
        {
          "name": "Create Subscription Payment Intent",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": { "mode": "raw", "raw": "{\n  \"cash\": \"card\",\n  \"subscription\": \"{{packageId}}\",\n  \"process\": \"new\",\n  \"email\": \"{{email}}\",\n  \"firstName\": \"Jane\",\n  \"lastName\": \"Doe\",\n  \"phone\": \"+201000000000\",\n  \"country\": \"EG\",\n  \"address\": \"123 Street\",\n  \"apartment\": \"\",\n  \"postalZip\": \"12345\",\n  \"bostaCityName\": \"Cairo\",\n  \"bostaZoneName\": \"Nasr City\",\n  \"billingCountry\": \"EG\",\n  \"billingFirstName\": \"Jane\",\n  \"billingLastName\": \"Doe\",\n  \"billingAddress\": \"123 Street\",\n  \"billingState\": \"Cairo\",\n  \"billingPostalZip\": \"12345\",\n  \"billingCity\": \"Cairo\",\n  \"billingPhone\": \"+201000000000\",\n  \"subTotal\": 1000,\n  \"shipping\": 0,\n  \"total\": 1000,\n  \"currency\": \"EGP\"\n}" },
            "url": { "raw": "{{baseUrl}}/api/payment", "host": ["{{baseUrl}}"], "path": ["api", "payment"] }
          }
        }
      ]
    },
