        }
      ]
    },
    {
      "name": "Collections",
      "item": [
        {
          "name": "Get Collection by ID",
          "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/api/collections?collectionID={{collectionId}}", "host": ["{{baseUrl}}"], "path": ["api", "collections"], "query": [ { "key": "collectionID", "value": "{{collectionId}}" } ] } }
        },
        {
          "name": "List Section Collections",
          "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/api/collections?collectionName=section", "host": ["{{baseUrl}}"], "path": ["api", "collections"], "query": [ { "key": "collectionName", "value": "section" } ] } }
