      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "List Products (filters)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/products?subcategory={{subcategoryId}}&category={{categoryId}}&minPrice=0&maxPrice=100000&sortBy=newest&search=",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products"],
              "query": [
                { "key": "subcategory", "value": "{{subcategoryId}}" },
                { "key": "category", "value": "{{categoryId}}" },
                { "key": "minPrice", "value": "0" },
                { "key": "maxPrice", "value": "100000" },
                { "key": "sortBy", "value": "newest" },
                { "key": "search", "value": "" }
              ]
            }
          }
        },
        {
          "name": "Get Product by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/products?productID={{productId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products"],
              "query": [ { "key": "productID", "value": "{{productId}}" } ]
            }
          }
        },
        {
          "name": "List Featured Products",
          "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/api/products?featured=true", "host": ["{{baseUrl}}"], "path": ["api", "products"], "query": [ { "key": "featured", "value": "true" } ] } }
        }
      ]
    },
    {
      "name": "Categories",
      "item": [
        {
          "name": "Get Categories + Subcategories",
