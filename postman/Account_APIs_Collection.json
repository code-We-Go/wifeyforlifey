  "item": [
    {
      "name": "User Profile",
      "item": [
        {
          "name": "Get User Profile",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/user/profile?email={{user_email}}",
              "host": ["{{base_url}}"],
              "path": ["api", "user", "profile"],
              "query": [
                {
                  "key": "email",
                  "value": "{{user_email}}",
                  "description": "User's email address"
                }
              ]
            },
            "description": "Fetches user profile information including username, firstName, lastName, email, imageURL, birthDate, and weddingDate"
          },
          "response": []
        },
        {
          "name": "Update User Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{user_email}}\",\n  \"username\": \"JaneDoe\",\n  \"firstName\": \"Jane\",\n  \"lastName\": \"Doe\",\n  \"imageURL\": \"https://example.com/image.jpg\",\n  \"birthDate\": \"1995-05-15\",\n  \"weddingDate\": \"2026-06-20\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/user/profile",
              "host": ["{{base_url}}"],
              "path": ["api", "user", "profile"]
            },
            "description": "Updates user profile information. Awards loyalty points for first-time entries (birthday, wedding date, first name, last name)"
          },
          "response": []
        }
      ],
      "description": "APIs for managing user profile information (Info Tab)"
    },
